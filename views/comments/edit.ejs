<% include ../partials/header %>

<div class="container">
    
    <!-- bootstrap grid -->
    <div class="row">
        <h1 style="text-align: center;">Edit Comment</h1>
        <!--div created for inline styling for form (temporary)-->
        <div style="width: 30%; margin: 30px auto">
            <!-- pass the comment id to form action and use override syntax for PUT -->
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <!--Replace placeholders with values passed in comment id-->
                <!--nest the inputs names inside campground so campground contains name,image,description -->
                <!--contain text and author inside Comment object-->
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
        <a href="/campgrounds">Go Back</a>
        </div>
    </div>
    
</div>

